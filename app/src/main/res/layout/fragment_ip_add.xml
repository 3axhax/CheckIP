<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/ip_input_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:autofillHints="0"
        android:digits="1234567890"
        android:ems="3"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ip_input_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints="0"
        android:digits="1234567890"
        android:ems="3"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="3"
        app:layout_constraintBottom_toBottomOf="@+id/ip_input_1"
        app:layout_constraintStart_toEndOf="@+id/point1" />

    <EditText
        android:id="@+id/ip_input_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints="0"
        android:digits="1234567890"
        android:ems="3"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="3"
        app:layout_constraintBottom_toBottomOf="@+id/ip_input_1"
        app:layout_constraintStart_toEndOf="@+id/point3" />

    <EditText
        android:id="@+id/ip_input_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints="0"
        android:digits="1234567890"
        android:ems="3"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="3"
        app:layout_constraintBottom_toBottomOf="@+id/ip_input_1"
        app:layout_constraintStart_toEndOf="@+id/point2" />

    <TextView
        android:id="@+id/point1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/point"
        app:layout_constraintBottom_toBottomOf="@+id/ip_input_1"
        app:layout_constraintStart_toEndOf="@+id/ip_input_1" />

    <TextView
        android:id="@+id/point3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/point"
        app:layout_constraintBottom_toBottomOf="@+id/ip_input_1"
        app:layout_constraintStart_toEndOf="@+id/ip_input_2" />

    <TextView
        android:id="@+id/point2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/point"
        app:layout_constraintBottom_toBottomOf="@+id/ip_input_1"
        app:layout_constraintStart_toEndOf="@+id/ip_input_3" />

    <Button
        android:id="@+id/bAddIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_ip"
        app:layout_constraintBottom_toBottomOf="@+id/ip_input_4"
        app:layout_constraintStart_toEndOf="@+id/ip_input_4" />

</androidx.constraintlayout.widget.ConstraintLayout>